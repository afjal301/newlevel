{% extends 'base.html.twig' %}

{% block title %}Hello EngredientController!{% endblock %}

{% block body %}
<div style="height:1cm;width:1cm;border-radius:100%;background-color:black;color:white;display:flex;align-items:center;justify-content:center">{{all.getTotalItemCount()}}</div>

<div class="container mt-4">

<table class="table table-hover">
  <thead>
    <tr class="table-dark">
      <th scope="row">Engredient</th>
      <td>Price</td>
      <td>id</td>
      <td>Modify</td>
      <td>Delete</td>
    </tr>
  </thead>
  <tbody>
     {% for engredient in all %}
     <tr>
      <td>{{engredient.name}}</td>
      <td>{{engredient.price}}</td>
       <td>{{engredient.id}}</td>
      <td><a href="" class="alert-danger"><button class="btn btn-outline-primary  btn-sm">Modify</button></a></</td>
      <td><a href="{{ path('engredient.delete', { id: engredient.id } ) }}" class="alert-danger"><button class="btn btn-danger btn-sm">Delete</button></a></td>
      
     </tr>
     {% endfor %}
  </tbody>
</table>
<div class="container sm-4">
{{knp_pagination_render(all)}}

</div>



{% endblock %}
